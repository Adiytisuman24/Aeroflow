{
  "name": "vscode-aeroflow",
  "displayName": "AeroFlow Language Support",
  "description": "AI-native language support for AeroFlow",
  "version": "0.1.0",
  "publisher": "aeroflow",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:aeroflow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "aeroflow",
      "aliases": ["AeroFlow", "aeroflow"],
      "extensions": [".aefl", ".aero"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "aeroflow",
      "scopeName": "source.aeroflow",
      "path": "./syntaxes/aeroflow.tmLanguage.json"
    }]
  }
}
